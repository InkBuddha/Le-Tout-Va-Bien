							<li><%= link_to "Hotel", '#' %></li>
							<li><%= link_to "Restaurant", '#' %></li>
							<li><%= link_to "Tarifs", '#' %></li>
						</ul>
					</li>					
					<li><%= link_to "Accès et Contacts", '#' %></li>
					<li><%= link_to "Tourisme", '#' %></li>
				</ul>
			</nav>
		</div>
		<div class=" center jumbotron">
			<h1>Le Tout Va Bien</h1>
			<p>Hotel Restaurant</p>
			<span class="glyphicon glyphicon-star" aria-hidden="true"></span><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
		</div>
	</header>


<div class="container">
	<%= yield %>
</div>


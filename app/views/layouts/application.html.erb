<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shiv'  %>
</head>
<body>
	<header class="header-container header-type-classic header-navbar-inverse header-absolute header-transparent header-scroll-resize">
		<div class="container">
			<%= link_to "L", root_path, id: "logo"  %>
			<nav>
				<ul class="nav navbar-nav navbar-right">
					<li class='dropdown'>
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Présentations <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to "Hotel", '#' %></li>
							<li><%= link_to "Restaurant", '#' %></li>
						</ul>
					</li>
					<li class='dropdown'>
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Réservations <b class="caret"></b></a>
